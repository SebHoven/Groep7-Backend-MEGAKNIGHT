generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Teacher {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  email     String    @unique
  password  String
  name      String?
  groups    Group[]
  tasks     Task[]
}

model Group {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  name       String
  teacher    Teacher   @relation(fields: [teacherId], references: [id])
  teacherId  Int
  students   Student[]
  groupstudent GroupStudent[]
}

model Student {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  name         String
  loginCode    String   @unique
  group        Group    @relation(fields: [groupId], references: [id])
  groupId      Int
  groupstudent GroupStudent[]
  taskstudent  TaskStudent[]
  avatar       Avatar[]
  progress     BattlepassProgress[]
}

model Task {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  name         String
  description  String?
  date         DateTime?
  icon         String?
  xp           Int?
  coordinates  Float?
  completed    Boolean  @default(false)
  teacher      Teacher   @relation(fields: [teacherId], references: [id])
  teacherId    Int
  tasksteps    TaskStep[]
  taskstudent  TaskStudent[]
}

model TaskStep {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  text         String
  completed    Boolean   @default(false)
  tasks        Task      @relation(fields: [taskId], references: [id])
  taskId       Int
}

model GroupStudent {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  group        Group     @relation(fields: [groupId], references: [id])
  groupId      Int
  student      Student   @relation(fields: [studentId], references: [id])
  studentId    Int
}

model TaskStudent {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  task         Task      @relation(fields: [taskId], references: [id])
  taskId       Int
  student      Student   @relation(fields: [studentId], references: [id])
  studentId    Int
}

model Avatar {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  student      Student   @relation(fields: [studentId], references: [id])
  studentId    Int       
  avatarItem   AvatarItemHasAvatar[]
}

model AvatarItem {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  slot         Int 
  name         String
  texture      String
  avatarItem   AvatarItemHasAvatar[]
  battlepassReward BattlepassReward[]
}

model AvatarItemHasAvatar {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  avatar       Avatar    @relation(fields: [avatarId], references: [id])
  avatarId     Int
  avataritem   AvatarItem @relation(fields: [avatarItemId], references: [id])
  avatarItemId Int
}

model Battlepass {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  name         String
  startDate    DateTime
  endDate      DateTime
  rewards      BattlepassReward[]
  progress     BattlepassProgress[]
}

model BattlepassReward {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  level        Int
  avatarItemId Int
  avatarItem   AvatarItem    @relation(fields: [avatarItemId], references: [id])
  battlepassId Int
  battlepass   Battlepass @relation(fields: [battlepassId], references: [id])
}

model BattlepassProgress {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  xp           Int
  level        Int
  battlepassId Int
  battlepass   Battlepass @relation(fields: [battlepassId], references: [id])
  student      Student   @relation(fields: [studentId], references: [id])
  studentId    Int
}